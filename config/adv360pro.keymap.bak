    #define COLEMAK 0
    #define VIMNAV 1
    #define KEYPAD 2
    #define FN 3
    #define MOD 4
    #define MS 5
    #define QWERTY 6

    /* remove unused keys from layout and move thumb cluster to bottom */
    chosen {
        zmk,matrix_transform = &urobs_transform;
    };

    keymap {
        compatible = "zmk,keymap";

        base_layer {
            bindings = <
                &ppipe    &pkp_n1   &lkp_n2   &lkp_n3   &lkp_n4   &akp_n5   &tog KEYPAD        &mo MOD      &ekp_n6     &rkp_n7   &rkp_n8     &rkp_n9    &skp_n0     &eprcnt
                &kp TAB   &kp Q     &kp W     &kp F     &kp P     &kp B     &kp HOME           &kp END      &kp J       &kp L     &kp U       &kp Y      &kp MINUS   &bhash
                &kp ESC   &kp A     &kp R     &kp S     &kp T     &kp G     &kp APOS           &tog VIMNAV  &kp M       &kp N     &kp E       &kp I      &kp O       &kp SEMI
                &kp LSHFT &kp Z     &kp X     &kp C     &kp D     &kp V                                     &kp K       &kp H     &kp COMMA   &kp DOT    &caps_word  &kp RSHFT
                &mo FN    &dgrave   &ggrave   &kp LEFT  &kp RIGHT                                                       &kp UP    &kp DOWN    &kp FSLH   &acaret     &mo FN
                                                                  &kp LCTRL &kp LALT           &kp LGUI     &kp RCTRL
                                                        &kp BSPC  &kp LSHFT &kp RWIN           &kp PG_UP    &kp ENTER   &kp SPACE
                                                                            &mo_tog VIMNAV MS  &kp PG_DN
            >;
        };

        vimnav_layer {
            bindings = <
                ___       &kp N1    &kp N2    &kp N3    &kp N4    &kp N5    ___                ___                 &kp N6        &kp N7    &kp N8    &kp N9    &kp N0    ___
                ___       ___       ___       ___       ___       ___       &kp INS            &kp PRINTSCREEN     &kp TILDE     &none     &kp U     &kp Y     ___       ___
                ___       ___       ___       ___       ___       ___       &kp DEL            ___                 &none         &kp H     &kp J     &kp K     &kp L     ___
                ___       ___       ___       ___       ___       ___                                              &none         &none     ___       ___       ___       ___
                ___       ___       ___       ___       ___                                                                      ___       ___       ___       ___       ___
                                                                  ___       ___                ___       ___
                                                        ___       ___       ___                ___       ___        ___
                                                                            ___                ___
            >;
        };

        keypad {
            bindings = <
                ___       ___         ___               ___            ___         ___       ___       ___    ___     &kp KP_NUM  &kp KP_EQUAL  &kp KP_DIVIDE  &kp KP_MULTIPLY  &kp MINUS
                ___       ___         ___               ___            ___         ___       ___       ___    ___     &kp KP_N7   &kp KP_N8     &kp KP_N9      &kp KP_MINUS     ___
                ___       &kp C_MUTE  &kp C_VOL_DN      &kp C_VOL_UP   ___         ___       ___       ___    ___     &kp KP_N4   &kp KP_N5     &kp KP_N6      &kp KP_PLUS      ___
                ___       &kp C_PREV  &kp C_PLAY_PAUSE  &kp C_STOP     &kp C_NEXT  ___                           ___     &kp KP_N1   &kp KP_N2     &kp KP_N3      &kp KP_ENTER     ___
                ___       ___       ___       ___       ___                                                           ___         ___           &kp KP_DOT     ___              ___
                                                                  ___       ___              ___       ___
                                                        ___       ___       ___              ___       ___    &kp KP_N0
                                                                            ___              ___
            >;
        };

        fn {
            bindings = <
                &kp F1    &kp F2    &kp F3    &kp F4    &kp F5    &kp F6    &tog QWERTY      ___       &kp F7    &kp F8    &kp F9    &kp F10   &kp F11   &kp F12
                ___       ___       ___       ___       ___       ___       &none            ___       ___       ___       ___       ___       ___       ___
                ___       ___       ___       ___       ___       ___       &none            ___       ___       ___       ___       ___       ___       ___
                ___       ___       ___       ___       ___       ___                                  ___       ___       ___       ___       ___       ___
                ___       ___       ___       ___       ___                                                      ___       ___       ___       ___       ___
                                                                  ___       ___              ___       ___
                                                        ___       ___       ___              ___       ___       ___
                                                                            ___              ___
            >;
