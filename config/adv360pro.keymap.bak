        mouse {
            bindings = <
                &none       &none       &none       &none     &none     &none     &tog KEYPAD        &mo MOD      &none        &none     &none     &none     &none     &none
                &none       &none       &none       &none     &none     &none     &kp HOME           &kp END      &none        &none     &none     &none     &none     &none
                &none       U_WH_L      U_WH_D      U_WH_U    U_WH_R    &none     &none              &tog VIMNAV  &none        U_MS_L    U_MS_D    U_MS_U    U_MS_R    &none
                &none       &none       U_BTN3      U_BTN2    U_BTN1    &none                                     &none        U_BTN1    U_BTN2    U_BTN3    &none     &none
                &none       &none       &none       U_MS_L    U_MS_R                                                           U_MS_U    U_MS_D    &none     &none     &none
                                                                        U_BTN3    &none              &none        U_BTN3
                                                              U_BTN1    U_BTN2    U_WH_L             U_WH_U       U_BTN2       U_BTN1
                                                                                  &mo_tog VIMNAV MS  U_WH_D
            >;
